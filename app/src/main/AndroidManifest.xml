<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Popcorn"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Activities.MainActivity"
            android:exported="true"
            android:configChanges="uiMode|screenSize|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.MovieDetailsActivity"
            android:exported="true"
            android:configChanges="uiMode|screenSize|orientation"/>

        <activity
            android:name=".Activities.PopularListActivity"
            android:exported="true"
            android:configChanges="uiMode|screenSize|orientation"/>

        <activity
            android:name=".Activities.NowPlayingListActivity"
            android:exported="true"
            android:configChanges="uiMode|screenSize|orientation"/>

        <activity
            android:name=".Activities.UpcomingListActivity"
            android:exported="true"
            android:configChanges="uiMode|screenSize|orientation"/>

        <!-- Declaration of SignUpActivity -->
        <activity
            android:name=".Activities.SignUpActivity"
            android:exported="true"
            android:configChanges="uiMode|screenSize|orientation"/>

        <activity
            android:name=".Activities.SignInActivity"
            android:exported="true"
            android:configChanges="uiMode|screenSize|orientation" />

        <activity
            android:name=".Activities.VerificationActivity"
            android:exported="true"
            android:configChanges="uiMode|screenSize|orientation"/>

        <activity
            android:name=".Activities.WatchlistActivity"
            android:exported="true"
            android:configChanges="uiMode|screenSize|orientation"/>

        <activity
            android:name=".Activities.WatchedActivity"
            android:exported="true"
            android:configChanges="uiMode|screenSize|orientation"/>

        <activity
            android:name=".Activities.AddReviewActivity"
            android:exported="true"
            android:configChanges="uiMode|screenSize|orientation"/>

        <activity
            android:name=".Activities.ReviewsActivity"
            android:exported="true"
            android:configChanges="uiMode|screenSize|orientation"/>

        <activity
            android:name=".Activities.EditReviewActivity"
            android:exported="true"
            android:configChanges="uiMode|screenSize|orientation"/>

        <activity
            android:name=".Activities.SearchActivity"
            android:exported="true"
            android:configChanges="uiMode|screenSize|orientation"/>

    </application>
</manifest>
